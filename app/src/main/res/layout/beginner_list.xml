<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/round_beginner"
            android:layout_margin="5dp"
            android:layout_marginTop="20sp"
            android:id="@+id/mountain">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Name"
                android:fontFamily="@font/amiko_semibold"
                android:id="@+id/beginner_name"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="#0C6664"/>
            <ImageView
                android:layout_width="110dp"
                android:layout_height="140dp"
                android:layout_marginLeft="260dp"
                android:id="@+id/beginner_image"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/beginner_level"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:text="Level"
                android:fontFamily="@font/amiko"
                android:textColor="#F50C0C0C"
                android:textSize="22dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_access_alarm_24"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="115dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amiko"
                android:text="time"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="110dp"
                android:textSize="22dp"
                android:id="@+id/beginner_time"
                android:textColor="#F51E1D1D"/>

            <TextView
                android:id="@+id/beginner_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="80dp"
                android:text="kcal"
                android:textAlignment="center"
                android:textColor="#F51E1D1D"
                android:fontFamily="@font/amiko"
                android:textSize="22dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>