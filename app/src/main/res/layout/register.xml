<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/yoga2"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:background="#A8787171">

        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"
            android:fontFamily="@font/autour_one"
            android:text="Perfect Health"
            android:textSize="32dp"
            android:textColor="#Fff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@+id/appname"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:text="Registration"
            android:textColor="#fff"
            android:fontFamily="@font/autour_one"
            android:textSize="28dp" />
        <EditText
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_below="@+id/txtname"
            android:layout_marginTop="40dp"
            android:padding="7dp"
            android:layout_centerHorizontal="true"
            android:textSize="26dp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/rounded_corners"
            android:id="@+id/edttxtname"/>

        <EditText
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="E-mail Id"
            android:layout_below="@+id/edttxtname"
            android:layout_marginTop="15dp"
            android:padding="7dp"
            android:textSize="26dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_corners"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="20sp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textStyle="bold"
            android:id="@+id/edttxtemail"/>

        <EditText
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="Mobile No."
            android:padding="7dp"
            android:layout_below="@+id/edttxtemail"
            android:background="@drawable/rounded_corners"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:inputType="number"
            android:textSize="26dp"
            android:layout_marginLeft="20sp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textStyle="bold"
            android:id="@+id/edttxtmobile"/>

        <EditText
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_below="@+id/edttxtmobile"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_corners"
            android:textSize="26dp"
            android:padding="7dp"
            android:layout_marginLeft="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/edttxtpassword"/>


        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textAllCaps="true"
            android:layout_below="@+id/edttxtpassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:id="@+id/btnregister1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnregister1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="22dp"
            android:textColor="#fff"
            android:text="Already Register? Login"
            android:id="@+id/alreadyregister"
            android:textStyle="bold"/>


    </RelativeLayout>








</RelativeLayout>