<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perfect Health"
        android:textAlignment="center"
        android:textColor="#00ACC1"
        android:layout_marginTop="20sp"
        android:textSize="30dp"
        android:fontFamily="@font/autour_one"
        android:id="@+id/l1"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/l1"
        android:id="@+id/rl1"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version"
            android:textColor="#272626"

            android:textSize="20dp"
            android:layout_margin="15dp"
            android:id="@+id/l2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="v1.0.234"
            android:textColor="#888282"
            android:layout_below="@+id/l2"
            android:textSize="15dp"

            android:layout_marginLeft="15dp"
            android:id="@+id/l3"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/rl1"
        android:id="@+id/rl2"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate on Google Play"
            android:textColor="#272626"
            android:textSize="20dp"
            android:layout_margin="15dp"
            android:id="@+id/l4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Feedback"
            android:textColor="#272626"
            android:textSize="20dp"
            android:layout_below="@+id/l4"
            android:layout_marginLeft="15dp"
            android:id="@+id/l5"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/rl2"
        android:id="@+id/rl3"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blog"
            android:textColor="#272626"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/l6"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contributors"
            android:textAllCaps="false"
            android:textColor="#272626"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/l6"
            android:id="@+id/l7"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms of Service"
            android:textColor="#272626"
            android:layout_below="@id/l7"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"

            android:id="@+id/l8"/>


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl3"
        android:textSize="15sp"
        android:text="All rights reserved.\nPerfect Health is a registered trademark."
        android:layout_margin="15dp"
        />







</RelativeLayout>